<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Swatches\Block\LayeredNavigation\RenderLayered"
                type="Kvitny\Catalog\Block\LayeredNavigation\RenderLayered"/>
    <type name="Magento\Catalog\Helper\Product\View">
        <plugin name="Kvitny_Catalog_State_Selector_Plugin"
                type="Kvitny\Catalog\Plugin\Helper\Product\View"/>
    </type>
    <type name="Magento\Catalog\Block\Product\AbstractProduct">
        <plugin name="add_product_object_to_image_data_array"
                type="Magento\Swatches\Model\Plugin\ProductImage" />
    </type>
    <type name="Kvitny\Catalog\Block\Widget\BenefitsBanner">
        <arguments>
            <argument name="templateProcessor" xsi:type="object">
                Magento\Widget\Model\Template\Filter
            </argument>
        </arguments>
    </type>
</config>
