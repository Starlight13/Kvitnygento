<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title" remove="true"/>

        <referenceContainer name="content">
            <block class="Kvitny\Home\Block\PopularCollection"
                   name="popular.collection"
                   template="Kvitny_Home::popularCollection.phtml"
                   after="-"/>
            <block class="Kvitny\Home\Block\Catalog"
                   name="catalog.section"
                   template="Kvitny_Home::catalog.phtml"
                   after="-"/>
            <block class="Kvitny\Home\Block\Form"
                   name="make.bouquet.form"
                   template="Kvitny_Home::form.phtml"
                   after="-"/>
            <block class="Magento\Framework\View\Element\Template"
                   name="instagram.carousel"
                   as="instagram_carousel"
                   template="Magento_Theme::instagram-carousel.phtml"
                   after="-">
                <block class="Magento\Cms\Block\Block" name="instagram.images">
                    <arguments>
                        <argument name="block_id" xsi:type="string">instagram_images</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>

    </body>
</page>
