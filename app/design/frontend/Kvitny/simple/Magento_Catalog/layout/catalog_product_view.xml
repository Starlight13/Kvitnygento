<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock  name="product.info.sku" remove="true"/>
        <referenceBlock name="view.addto.compare" remove="true"/>
        <referenceBlock name="product.info.stock.sku" remove="true"/>

        <move element="view.addto.wishlist"
              destination="product.info.main"
              before="-"/>

        <referenceBlock name="content">
            <block class="Kvitny\Catalog\Block\CustomContent"
                   name="custom.content"
                   template="Kvitny_Catalog::custom_content.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Magento\Catalog\ViewModel\Product\Listing\PreparePostData
                    </argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
